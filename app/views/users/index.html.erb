<h1>All Alpha Bloggers</h1>
<div> 
    <% @users.each do |user| %>
        <div class="card p-2 my-2">
            <div class="row">
                <div class="well col-md-2">
                    <div><%= link_to gravatar_for(user), user_path(user) %></div>
                </div>
                <div class="col-md-4">
                    <div class="article-title">
                        <%= link_to user.username, user_path(user) %>
                    </div>
                    <div><small><%= pluralize(user.articles.count, "article") if user.articles %></small></div>
                    <% if logged_in? and current_user.admin?%>
                        <div>
                            <%= link_to "Delete This User", user_path(user), method: :delete, data: {confirm: "Are you Sure you want to delete the User?"}%>
                        </div>
                    <% end %>
                </div>                
            </div>  
        </div>
    <% end %>
</div>