
<% if @article.errors.any?%>
<h2>Resolve the Errors to create Article</h2>
<ul>
    <% @article.errors.full_messages.each do |msg|%>
        <li><%= msg %></li>
    <% end %>
</ul>
<% end %>


<h2>Edit This Article</h2>
<%= form_for @article do |f| %>
    <div>
        <%= f.label :title %> <br/>
        <%= f.text_field :title %>
    </div>
    <div>
        <%= f.label :description %><br />
        <%= f.text_area :description %>
    </div>

    <%= f.submit %>


<% end %>